@model List<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "Index";
}

<h3 class="text-center">User Role Management</h3>
<hr />

<div class="container">
    
    @await Html.PartialAsync("_TopMenuPartial")

    <div class="row">
        <div class="col-12">
            @if (Model.Count == 0)
            {
                <p>No users</p>
            }
            else
            {
                <table class="table">
                    <thead class="bg-dark text-white">
                        <tr>
                            <th>UserName</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var u in Model)
                        {
                            <tr>
                                <td>@u.UserName</td>
                                <td>
                                    <a class="btn btn-success"
                                       asp-route-userId="@u.Id"
                                       asp-action="Details">View Details</a>

                                    <a class="btn btn-primary"
                                       asp-route-userId="@u.Id"
                                       asp-action="AssignClaimToUser"
                                       asp-controller="Claim">Add Claim</a>

                                    <a class="btn btn-info"
                                       asp-route-userId="@u.Id"
                                       asp-action="AssignClaimToUser"
                                       asp-controller="Claim">View Claims</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

